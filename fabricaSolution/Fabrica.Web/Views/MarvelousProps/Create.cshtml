@using Fabrica.Services.Models;
@model MarvelousPropServiceModel

@{
    ViewData["Title"] = "Create Marvelous Prop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead bg-primary text-white text-center">
    <div class="row" style="margin-right: 0px">
        <div class="column">
            <div class="col w-25 align-items-md-center">
                <h1 class="masthead-subheading text-uppercase text-md-right text-secondary">Create</h1>
                <h1 class="masthead-heading text-uppercase text-md-right text-secondary">3d</h1>
                <h1 class="masthead-heading text-uppercase text-md-right text-secondary">Prop</h1>
            </div>
        </div>

        <div class="column">
            <div class="container w-50 align-items-md-baseline flex-column">
                <form class="mx-auto half-width" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input type="text" maxlength="40" class="form-control" asp-for="@Model.Name"
                               placeholder="Marvelous Prop Name...">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Type"></label>
                        <select class="form-control" asp-for="@Model.Type" placeholder="Select Type...">
                            <option selected disabled>Select Type...</option>
                            <option value="Magicians">Magicians equipment</option>
                            <option value="Astronauts">Astronauts equipment</option>
                            <option value="Divers">Divers equipment</option>
                            <option value="Holiday">Holiday equipment</option>
                        </select>
                        <span asp-validation-for="@Model.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Points"></label>
                        <input type="number" min="75" max="2500" step="1" class="form-control" asp-for="@Model.Points" placeholder="Points price...">
                        <span asp-validation-for="@Model.Points" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ImageUrl"></label>
                        <input type="url" class="form-control" asp-for="@Model.ImageUrl" placeholder="ImageUrl...">
                        <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Hashtags"></label>
                        <input type="text" maxlength="50" class="form-control" asp-for="@Model.Hashtags" placeholder="#Hashtags...">
                        <span asp-validation-for="@Model.Hashtags" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea type="text" maxlength="450" class="form-control" asp-for="@Model.Description" placeholder="Description..."></textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                    <div class="button-holder d-flex justify-content-center">
                        <button type="submit" class="btn btn-outline-light">Create</button>
                    </div>
                    <br>
                </form>

                <!-- Icon Divider -->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="divider-custom-line"></div>
                </div>

            </div>
        </div>
    </div>
</header>