@using Fabrica.Web.Models
@model AddCreditCardViewModel

@{
    ViewData["Title"] = "AddCreditCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead bg-primary text-white text-center">
    <div class="row" style="margin-right: 0px">
        <div class="column">
            <div class="col w-25 align-items-md-center">
                <h1 class="masthead-subheading text-uppercase text-md-right text-secondary">Add</h1>
                <h1 class="masthead-heading text-uppercase text-md-right text-secondary">Credit</h1>
                <h1 class="masthead-heading text-uppercase text-md-right text-secondary">Card</h1>
            </div>
        </div>

        <div class="column">
            <div class="container w-50 align-items-md-baseline flex-column">
                <form class="mx-auto half-width" method="post" asp-antiforgery="true">
                    <div class="form-group">
                        <label asp-for="@Model.CardNumber"></label>
                        <input type="text" class="form-control" asp-for="@Model.CardNumber" placeholder="Card Number...">
                        <span asp-validation-for="@Model.CardNumber" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Cash"></label>
                        <input type="number" min="0.1" step="0.1" class="form-control" asp-for="@Model.Cash" placeholder="Load Deposit...">
                        <span asp-validation-for="@Model.Cash" class="text-danger"></span>
                    </div>

                    <div class="button-holder d-flex justify-content-center">
                        <button type="submit" class="btn btn-outline-light">Add</button>
                    </div>
                    <br/>
                </form>

                <!-- Icon Divider -->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="divider-custom-line"></div>
                </div>
            </div>
        </div>
    </div>
</header>
